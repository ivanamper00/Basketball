<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/darkRed"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<!--                    <TextView-->
<!--                        android:id="@+id/dialog_event_team_scores"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="0dp"-->
<!--                        android:visibility="invisible"/>-->
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:background="@drawable/events_bg"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/dialog_event_team_scores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="99 - 99"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/dialog_event_team_home_logo"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="50dp"
                                    app:cardBackgroundColor="@color/transparent">

                                    <TextView
                                        android:id="@+id/dialog_event_team_home_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:textSize="12sp"
                                        android:text="Team Name"
                                        android:textColor="@color/colorWhite" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/dialog_event_team_away_logo"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="50dp"
                                    android:layout_height="130dp"/>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginEnd="10dp"
                                    app:cardBackgroundColor="@color/transparent"
                                    android:layout_marginStart="50dp">
                                    <TextView
                                        android:id="@+id/dialog_event_team_away_name"
                                        android:layout_width="match_parent"
                                        android:textColor="@color/colorWhite"
                                        android:layout_height="wrap_content"
                                        android:text="Team Name"
                                        android:textSize="12sp"
                                        android:gravity="center"
                                        android:padding="5dp"/>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#000000"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:weightSum="1"
                    android:orientation="vertical" >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:text="Home"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:text="Away"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:id="@+id/dialog_event_home_first"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="1st"
                                android:layout_weight=".33"/>
                            <TextView
                                android:id="@+id/dialog_event_away_first"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:id="@+id/dialog_event_home_second"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="2nd"
                                android:layout_weight=".33"/>
                            <TextView
                                android:id="@+id/dialog_event_away_second"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:id="@+id/dialog_event_home_third"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="3rd"
                                android:layout_weight=".33"/>
                            <TextView
                                android:id="@+id/dialog_event_away_third"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:id="@+id/dialog_event_home_fourth"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="4th"
                                android:layout_weight=".33"/>
                            <TextView
                                android:id="@+id/dialog_event_away_fourth"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                    </TableLayout>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_home_ft"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="FT"
                                android:layout_weight=".33"/>
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_away_ft"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_home_fg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="FG"
                                android:layout_weight=".33"/>
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_away_fg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_home_two"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="2PT"
                                android:layout_weight=".33"/>
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_away_two"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_home_three"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="3PT"
                                android:layout_weight=".33"/>
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_away_three"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_home_fouls"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:text="Fouls"
                                android:layout_weight=".33"/>
                            <TextView
                                android:text="-"
                                android:id="@+id/dialog_event_away_fouls"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_weight=".33"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_event_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:foreground="@drawable/close_black"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_alignParentRight="true"/>
</RelativeLayout>